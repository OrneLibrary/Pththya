{
    "Config":{

        // Optional
        "vcenterServer":"192.168.1.1",  // Can be IP or FQDN
        "vcenterUser":"administrator@lab.local",  // Must be domain account
        "vmHost":"192.168.1.2",  // IP of ESXi server to deploy to
        "vmDatastore":"datastore"
    },
    "Networks":[
        {
            // Required
            "name":"NetworkName",  // Name of network in VMWare

            // Optional
            "nic":"vmnic2",    //Single physical NIC to attach to switch
            "nics":[               // Multiple physical NIC to attach to switch
                "vmnic3",
                "vmnic5"
            ],
            "managementIP":"172.20.20.2", // Adding this makes a new port group with an administrative interface
            "managementMask":"255.255.255.0" //Required if managementIP is used.
        },
        {
            "name":"Second Network",
            "nic":"vmnic2"
        }
    ],
    "VMs":[
        {
            // Required
            "name":"VM Name",
            "templateName":"Template Name",  // Exact name of template in vCenter
            "mac":"00:50:56:48:23:99",  // Must have unique MAC address

            // Optional
            "startAction":1,  // If set this will autostart the VM when ESXi boots
            "startOrder":1,  //Sets start order number. Not required but needs startAction to be set
            "startDelay":120,  //Sets delay for
            "number":5, // Allows multiple of the same configuration deployed at once.
            "macStart":"00:50:56:48:23:47", // Takes the place of mac. Will increment the last octet when using number. Please keep last octet as an int
            "networkAdapter":[  // Use to add extra adapters
                "Target",
                "Guest"
            ],
            "commands":[  
                "CLI script to run on host",  // Run commands native to VM's OS
                "CLI script to run on host"  // When using the "number" key you can us $i as a variable. See example below
            ],
            "userName":"user"  // User name of account on VM. Required for commands
        },
        {
            "name":"Test Server",
            "templateName":"Test Gold",
            "mac":"00:50:56:CE:3A:74",
            "commands":{
                "userName":"testUser",
                "scriptText1":"Rename-Computer -NewName 'Test Computer'"
            }
        },
        {
            "name":"Test Computer",
            "templateName":"Test Gold",
            "number":10,
            "macStart":"00:50:56:CE:3A:30",
            "userName":"user",
            "commands":[
                "Rename-Computer -NewName 'Test Computer $i'"  // $i will start at 0 and count to 9 in this case
            ]
        }
    ]
}